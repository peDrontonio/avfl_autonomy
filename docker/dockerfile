# Dockerfile for ArduPilot SITL + Gazebo + ROS 2 Humble UAV Simulation
# Base image: ROS 2 Humble on Ubuntu 22.04
FROM ros:humble-ros-base-jammy

# Prevent interactive prompts during package installation
ENV DEBIAN_FRONTEND=noninteractive
ENV TZ=Etc/UTC

# Set up locale
RUN apt-get update && apt-get install -y locales \
    && locale-gen en_US en_US.UTF-8 \
    && update-locale LC_ALL=en_US.UTF-8 LANG=en_US.UTF-8
ENV LANG=en_US.UTF-8

# Install common dependencies
RUN apt-get update && apt-get install -y \
    git \
    wget \
    curl \
    sudo \
    lsb-release \
    gnupg2 \
    build-essential \
    cmake \
    python3-pip \
    python3-setuptools \
    python3-wheel \
    python3-vcstool \
    python3-colcon-common-extensions \
    python3-rosdep \
    software-properties-common \
    && rm -rf /var/lib/apt/lists/*

# ============================================
# Install Gazebo Harmonic
# ============================================
RUN wget https://packages.osrfoundation.org/gazebo.gpg -O /usr/share/keyrings/pkgs-osrf-archive-keyring.gpg \
    && echo "deb [arch=$(dpkg --print-architecture) signed-by=/usr/share/keyrings/pkgs-osrf-archive-keyring.gpg] http://packages.osrfoundation.org/gazebo/ubuntu-stable $(lsb_release -cs) main" | tee /etc/apt/sources.list.d/gazebo-stable.list > /dev/null \
    && apt-get update && apt-get install -y \
    gz-harmonic \
    && rm -rf /var/lib/apt/lists/*

# Add Gazebo sources to rosdep for Humble + Harmonic pairing
RUN wget https://raw.githubusercontent.com/osrf/osrf-rosdep/master/gz/00-gazebo.list -O /etc/ros/rosdep/sources.list.d/00-gazebo.list \
    && rosdep update

# Install ROS 2 packages needed for ros_gz bridge
RUN apt-get update && apt-get install -y \
    ros-humble-image-transport \
    ros-humble-image-transport-plugins \
    ros-humble-xacro \
    ros-humble-vision-msgs \
    ros-humble-gps-msgs \
    ros-humble-actuator-msgs \
    ros-humble-rviz2 \
    ros-humble-rqt-image-view \
    ros-humble-rqt-plot \
    ros-humble-rqt-topic \
    ros-humble-sdformat-urdf \
    libgflags-dev \
    && rm -rf /var/lib/apt/lists/*

# Install ros_gz bridge from source (for Harmonic + Humble compatibility)
WORKDIR /opt/ros_gz_ws/src
RUN git clone https://github.com/gazebosim/ros_gz.git -b humble

WORKDIR /opt/ros_gz_ws
RUN apt-get update \
    && . /opt/ros/humble/setup.sh \
    && export GZ_VERSION=harmonic \
    && rosdep update \
    && rosdep install -r --from-paths src -i -y --rosdistro humble \
        --skip-keys="gz-transport13 gz-sim8 gz-math7 gz-msgs10 gz-plugin2 gz-rendering8 gz-sensors8 gz-gui8 gz-physics7" \
    && colcon build --symlink-install \
    && rm -rf /var/lib/apt/lists/*

# ============================================
# Install ArduPilot dependencies
# ============================================
RUN apt-get update && apt-get install -y \
    python3-dev \
    python3-opencv \
    python3-wxgtk4.0 \
    python3-matplotlib \
    python3-lxml \
    python3-pygame \
    libxml2-dev \
    libxslt1-dev \
    && rm -rf /var/lib/apt/lists/*

# Install Python packages for ArduPilot
RUN pip3 install --no-cache-dir \
    pymavlink \
    MAVProxy \
    pexpect \
    future \
    empy==3.3.4 \
    pyserial \
    dronekit \
    dronekit-sitl

# ============================================
# Install MicroXRCEDDSGen (required for ardupilot_sitl)
# ============================================
RUN apt-get update && apt-get install -y default-jre \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /opt
RUN git clone --recurse-submodules https://github.com/ardupilot/Micro-XRCE-DDS-Gen.git \
    && cd Micro-XRCE-DDS-Gen \
    && ./gradlew assemble

ENV PATH="/opt/Micro-XRCE-DDS-Gen/scripts:${PATH}"

# ============================================
# Install MAVROS for ROS 2
# ============================================
RUN apt-get update && apt-get install -y \
    ros-humble-mavros \
    ros-humble-mavros-extras \
    && rm -rf /var/lib/apt/lists/*

# Install GeographicLib datasets for MAVROS
RUN wget https://raw.githubusercontent.com/mavlink/mavros/master/mavros/scripts/install_geographiclib_datasets.sh \
    && chmod +x install_geographiclib_datasets.sh \
    && ./install_geographiclib_datasets.sh \
    && rm install_geographiclib_datasets.sh

# ============================================
# Clone and build ArduPilot
# ============================================
WORKDIR /opt
RUN git clone --recurse-submodules https://github.com/ArduPilot/ardupilot.git \
    && cd ardupilot \
    && git checkout Copter-4.5 \
    && git submodule update --init --recursive

# Install ArduPilot prerequisites manually (script doesn't run as root)
WORKDIR /opt/ardupilot
RUN apt-get update && apt-get install -y \
    python3-dev \
    python3-pip \
    python3-setuptools \
    python3-numpy \
    python3-pyparsing \
    python3-psutil \
    libpng-dev \
    libfreetype6-dev \
    pkg-config \
    libtool-bin \
    ccache \
    gawk \
    && pip3 install --no-cache-dir \
        empy==3.3.4 \
        pexpect \
        future \
        pymavlink \
        MAVProxy \
        geocoder \
        flake8 \
        junitparser \
        lxml \
        matplotlib \
        numpy \
        opencv-python \
        pyserial \
        pyyaml \
        requests \
        scipy \
        monotonic \
    && rm -rf /var/lib/apt/lists/*

# Build ArduPilot SITL for Copter
RUN ./waf configure --board sitl \
    && ./waf copter

# ============================================
# Create ROS 2 workspace and install ardupilot_gz
# ============================================
WORKDIR /root/internship_ws/src

# Clone ArduPilot ROS 2 packages using vcs import
RUN . /opt/ros/humble/setup.sh \
    && export GZ_VERSION=harmonic \
    && git clone https://github.com/ArduPilot/ardupilot_gz.git -b main \
    && vcs import --recursive < ardupilot_gz/ros2_gz.repos

# Note: avfl_autonomy should be mounted as a volume at runtime
# Use: -v /home/marcotayar/internship_ws/src/avfl_autonomy:/root/internship_ws/src/avfl_autonomy

WORKDIR /root/internship_ws

# Install dependencies only (build at runtime for flexibility)
RUN . /opt/ros/humble/setup.sh \
    && . /opt/ros_gz_ws/install/setup.sh \
    && export GZ_VERSION=harmonic \
    && apt-get update \
    && rosdep update \
    && rosdep install -y --from-paths src --ignore-src -r \
    && rm -rf /var/lib/apt/lists/*

# Note: Run 'colcon build --symlink-install' after starting the container
# This allows for faster development iteration without rebuilding the Docker image

# ============================================
# Environment setup
# ============================================
# Add ArduPilot to PATH
ENV PATH="/opt/ardupilot/Tools/autotest:${PATH}"
ENV PATH="/opt/ardupilot/build/sitl/bin:${PATH}"

# Create entrypoint script
RUN echo '#!/bin/bash\n\
set -e\n\
\n\
# Set Gazebo version\n\
export GZ_VERSION=harmonic\n\
\n\
# Source ROS 2\n\
source /opt/ros/humble/setup.bash\n\
\n\
# Source ros_gz workspace\n\
if [ -f /opt/ros_gz_ws/install/setup.bash ]; then\n\
    source /opt/ros_gz_ws/install/setup.bash\n\
fi\n\
\n\
# Source workspace if built\n\
if [ -f /root/internship_ws/install/setup.bash ]; then\n\
    source /root/internship_ws/install/setup.bash\n\
fi\n\
\n\
# Source ArduPilot environment\n\
if [ -f /root/.profile ]; then\n\
    source /root/.profile\n\
fi\n\
\n\
exec "$@"' > /ros_entrypoint.sh \
    && chmod +x /ros_entrypoint.sh

# Set working directory
WORKDIR /root

# Expose ports for SITL and MAVLink
# 5760: MAVLink TCP
# 14550: MAVLink UDP (GCS)
# 14551: MAVLink UDP (API)
EXPOSE 5760 14550 14551

ENTRYPOINT ["/ros_entrypoint.sh"]
CMD ["bash"]